<Page
    x:Class="Contatos.Configuracoes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Contatos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Configurações" Grid.Row="0"
                   Margin="12"
                   Style="{ThemeResource SubheaderTextBlockStyle}"/>

        <TextBox Header="Nome" Grid.Row="1"
                 Margin="12" Name="NomeCompleto"
                 TextChanged="myTextBox_TextChanged"/>

        <ToggleSwitch Header="Habilitar Push Notification?"
                      Grid.Row="2" Margin="12"
                      OnContent="Habilitado"
                      OffContent="Desabilitado"
                      Name="PushNotification"
                      Toggled="ToggleSwitch_Toggled"/>
    </Grid>
</Page>
