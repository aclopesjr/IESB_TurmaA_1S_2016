<Page
    x:Class="NavegacaoHamburger.Hamburger"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NavegacaoHamburger"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='5' Name="btnMenu" Grid.Column="0"
                    BorderBrush="Black" BorderThickness="0,0,0,1"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE700;" Width="50"
                    Height="50"
                                           />
            <Border Grid.Column="1" BorderBrush="Black"
                    BorderThickness="0,0,0,1">
                <TextBlock Text="Hamburger Menu"
                           VerticalAlignment="Center" Margin="10,0,0,0"
                           Style="{ThemeResource TitleTextBlockStyle}"/>
            </Border>
        </Grid>

        <SplitView x:ConnectionId='1' Grid.Row="1" x:Name="MySplitView"
                   DisplayMode="Overlay"
                   IsPaneOpen="True"
                   CompactPaneLength="0"
                   OpenPaneLength="150">
            <SplitView.Pane>
                <ListView SelectionMode="None">
                    <ListViewItem x:ConnectionId='2'                             >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE825;"
                                       FontSize="18" FontFamily="Segoe MDL2
                                       Assets" VerticalAlignment="Center"/>
                            <TextBlock Text="Página 1"
                                       FontSize="18" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:ConnectionId='3'                               >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE825;" FontSize="18" FontFamily="Segoe MDL2
Assets" VerticalAlignment="Center"/>
                            <TextBlock Text="Página 2" FontSize="18" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:ConnectionId='4'                               >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE825;" FontSize="18" FontFamily="Segoe MDL2
Assets" VerticalAlignment="Center"/>
                            <TextBlock Text="Página 3" FontSize="18" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>

